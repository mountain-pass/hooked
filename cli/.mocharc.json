{
    "extension": [
        "js",
        "ts"
    ],
    "package": "./package.json",
    "reporter": "spec",
    "timeout": 30000,
    "ui": "bdd",
    "spec": [
        "test/**/*.{ts,js}",
        "test/*.{ts,js}"
    ],
    "watch-files": [
        "src/**/*.{ts,js}",
        "test/**/*.{ts,js}",
        "test/*.{ts,js}"
    ],
    "bail": true,
    "recursive": true,
    "loader": "ts-node/esm",
    "reporter-option": "maxDiffSize=8128"
}