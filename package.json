{
    "name": "hooked",
    "version": "1.0.0",
    "description": "Configurable rest endpoints.",
    "author": "",
    "private": true,
    "license": "MIT",
    "bin": {
        "j": "./cli/dist/index.js"
    },
    "workspaces": [
        "cli"
    ],
    "scripts": {
        "localInstall": "npm i -g --force .",
        "localUninstall": "npm uninstall -g --force hooked",
        "globalInstall": "npm i -g @mountainpass/hooked-cli",
        "globalUninstall": "npm uninstall -g --force @mountainpass/hooked-cli",
        "cli": "yarn workspace @mountainpass/hooked-cli",
        "l:bootstrap": "lerna bootstrap",
        "l:install": "lerna exec --scope @mountainpass/* npm install",
        "l:build": "lerna run --scope @mountainpass/* build",
        "l:bump": "npx lerna version patch --yes --force-publish --message '%s [skip ci]'",
        "prel:publish": "yarn cli build",
        "l:publish": "npx lerna publish from-package --yes",
        "l:graph": "nx graph"
    },
    "devDependencies": {
        "lerna": "^6.4.1"
    }
}